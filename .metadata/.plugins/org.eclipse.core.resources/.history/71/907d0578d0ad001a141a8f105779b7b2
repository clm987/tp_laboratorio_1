#include <stdio.h>
#include <stdlib.h>
#include "LinkedList.h"
#include "Controller.h"
#include "Employee.h"
#include "IOdata.h"
#define ARCHIVO "data.csv"

/****************************************************
    Menu:
     1. Cargar los datos de los empleados desde el archivo data.csv (modo texto).
     2. Cargar los datos de los empleados desde el archivo data.csv (modo binario).
     3. Alta de empleado
     4. Modificar datos de empleado
     5. Baja de empleado
     6. Listar empleados
     7. Ordenar empleados
     8. Guardar los datos de los empleados en el archivo data.csv (modo texto).
     9. Guardar los datos de los empleados en el archivo data.csv (modo binario).
    10. Salir
*****************************************************/



int main()
{
    int option = 0;
    setbuf(stdout, NULL);

    LinkedList* listaEmpleados = ll_newLinkedList();
    char menuDeOpciones[] =
            						"\n1 CARGA DE DATOS DE EMPLEADO DESDE ARCHIVO TXT\
            						 \n2 CARGA DE DATOS DE EMPLEADO DESDE ARCHIVO BIN\
            						 \n3 ALTA EMPLEADO\
            						 \n4 MODIFICAR DATOS DE EMPLEADO\
            						 \n5 BAJA DE EMPLEADO\
            						 \n6 LISTAR EMPLEADOS\
            						 \n7 ORDENAR EMPLEADOS\
            						 \n8 GUARDAR LOS DATOS DE EMPLEADO DESDE ARCHIVO TXT\
            						 \n9 GUARDAR LOS DATOS DE EMPLEADO DESDE ARCHIVO BIN\
            						 \n10 SALIR\
            						 \n Ingrese una opcion: ";
        char mensajeError[] = "Error. Debe ingresar un opcion valida";

        do{
        	getValidOption(&option,menuDeOpciones,mensajeError,1,10,3);
            switch(option)
            {
                case 1:
                   controller_loadFromText("data2.csv",listaEmpleados);
                    break;
                case 2:
                	controller_loadFromBinary("data.csv", listaEmpleados);
                	break;
                case 3:
                	controller_addEmployee(listaEmpleados);
                	break;
                case 4:
                	controller_editEmployee(listaEmpleados);
                	break;
                case 5:
                	controller_removeEmployee(listaEmpleados);
                	break;
                case 6:
                	controller_ListEmployee(listaEmpleados);
                	break;
                case 7:
                	controller_sortEmployee(listaEmpleados);
                	break;
                case 8:
                	controller_saveAsText("data2.csv", listaEmpleados);
                	break;
                case 9:
                	controller_saveAsBinary("data3.bin" ,listaEmpleados);
                	break;
                case 10:
                    break;
            }
        }while(option != 10);
        return 0;
}

