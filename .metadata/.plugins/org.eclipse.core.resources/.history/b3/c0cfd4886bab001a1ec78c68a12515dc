/** \brief Carga los datos de los empleados desde el archivo data.csv (modo texto).
 *
 * \param path char*
 * \param pArrayListEmployee LinkedList*
 * \return int
 *
 */
int controller_loadFromText(char* path , LinkedList* pArrayListEmployee)
{
	FILE* f;
	char buffer1[128];
	char buffer2[128];
	char buffer3[128];
	char buffer4[128];
	int cont = 0;
	int cant;

	Employee* lista = employee_new();
	Employee* pAuxEmployee;

	f = fopen(path,"r");
	if(f == NULL)
	{
	 showMessage ("Ocurrió un error al abrir el archivo. Se cerrará la aplicación");
	 system("pause");
	 exit(EXIT_FAILURE);
	}
	fscanf(f, "%[^,],%[^,],%[^,],%[^\n]\n", buffer1[128], buffer2[128], buffer3[128], buffer4[128]);
	printf("%s   %s    %s    %s\n\n", buffer1[128], buffer2[128], buffer3[128], buffer4[128]);














    return 1;
}

